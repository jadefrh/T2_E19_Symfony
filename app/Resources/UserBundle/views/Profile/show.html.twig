{% extends 'base.html.twig' %}

{% block body %}
    {% block fos_user_content %}
    <div class="container">
      <div class="col-xs-12 userInfo">
        <p><strong>{{ 'Nom d\'utilisateur'|trans }} :</strong> {{ entity.username }}</p>
        <p><strong>{{ 'Email'|trans }} : </strong>{{ entity.email }}</p>
        <p><strong>Dernière connexion : </strong>{{ app.user.lastLogin|date('d-m-Y H:i') }}</p>
        <p><strong><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></strong></p>
      </div>
      <div class="clear"></div>
      <div class="userReactions col-xs-12">
        <div class="col-xs-12 commentedShows">
            <h3>Émissions commentées</h3>
        </div>
        <div class="col-xs-12 likedShows">
            <h3>Émissions aimées</h3>
        </div>
      </div>
    </div>
    {% endblock fos_user_content %}
{% endblock %}
