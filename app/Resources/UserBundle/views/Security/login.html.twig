{% extends 'base.html.twig' %}

{% block body %}
{% block fos_user_content %}
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    {% block title %}
    {% endblock %}

    {% block content %}

        {% trans_default_domain 'FOSUserBundle' %}

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" class="col-md-6 col-md-offset-3 loginForm" method="post">
        <h1 class="text-left loginTitle">Se connecter</h1>
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <input placeholder="Identifiant" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            <input placeholder="Mot de passe" type="password" id="password" name="_password" required="required" />

            <p class="rememberMe">
              <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
              <span>Se souvenir de moi</span>
            </p>

            <input class="btn-default loginBtn" type="submit" id="_submit" name="_submit" value="Se connecter" />
            <a class="notRegisteredYet" href="register">Pas de compte ? S'inscrire ici</a>
        </form>

    {% endblock %}


{% endblock fos_user_content %}

{% endblock %}
